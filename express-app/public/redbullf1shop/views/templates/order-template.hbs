<div class="container">
    {{> nav-partial}}
    <main>
      <div class="container">
        <div class="row">
          <div class="justify-content-center w-75 mx-auto">
            <h2 class="">Order Number {{ident}}</h2>
            <p><b>Date: </b>&nbsp;{{date}}</p>
            <p><b>Address: </b>&nbsp;{{address}}</p>
            <p><b>Card number: </b>&nbsp;{{cardNumber}}</p>
            <p><b>Card holder: </b>&nbsp;{{cardHolder}}</p>
            <hr>
            <h2 class="">Products</h2>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Qty</th>
                  <th scope="col">Product</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                {{#each orderitem}}
                  {{> order-partial}}
                  {{/each}}
              </tbody>
            </table>
            <div>
              <p><b>Subtotal: €</b>&nbsp;{{subtotal}}</p>
              <p><b>Tax: €</b>&nbsp;{{tax}}</p>
              <p><b>Total: €</b>&nbsp;{{total}}</p>
            </div>
          </div>


        </div>
      </div>
  </div>
  <br><br>
  </main>
  {{> footer-partial}}
  </div>