<div class="col-xl-3 col-lg-4 col-md-6 col-12 mb-3">
  <div class="card">
    <img src={{url}} class="card-img-top"
      alt="Car Cover">
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">{{description}}</p>
      <div class="d-flex justify-content-end align-items-center">
        <div class="font-weight-bold display-5">{{priceFormat price}}</div><a onclick="Controller.controllers.addProduct.addProduct_clicked(event, {{id}}); Controller.controllers.index.refresh();"
          class="btn btn-primary btn-lg ml-3">Buy</a>
      </div>
    </div>
  </div>
</div>